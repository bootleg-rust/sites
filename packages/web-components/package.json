{
  "name": "@bootleg-rust/web-components",
  "version": "0.0.1",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "build": "npm-run-all build:clean build:storybook build:razzle",
    "build:clean": "rm -rf dist && rm -rf public && rm -rf build",
    "build:razzle": "razzle build && rsync -a ./public/ ./build/public && mv ./build/public/index.html ./build/index-template.html",
    "build:storybook": "build-storybook -s .storybook/public -o public --quiet --loglevel warn",
    "clean": "rm -rf build",
    "deploy": "build-tooling-cli service deploy --service-name web-components",
    "dev": "start-storybook --quiet --ci -p 4050 -s .storybook/public",
    "lint": "npm-run-all lint:eslint lint:stylelint",
    "lint:eslint": "eslint --max-warnings=0 .",
    "lint:eslint:fix": "eslint --max-warnings=0 --fix .",
    "lint:fix": "npm-run-all lint:eslint:fix",
    "lint:stylelint": "stylelint './src/**/*.{ts,tsx,js,jsx}' ",
    "package": "build-tooling-cli service package --service-name web-components",
    "publish": "build-tooling-cli service publish --service-name web-components",
    "serve": "node build/server.js",
    "test": "jest"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@bootleg-rust/lib-config": "*",
    "@bootleg-rust/lib-design-system": "*",
    "@bootleg-rust/lib-features": "*",
    "@bootleg-rust/lib-ssr-runtime": "*",
    "@bootleg-rust/lib-ssr-toolbox": "*",
    "core-js": "^3.6.4",
    "koa-router": "^7.4.0",
    "react": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@bootleg-rust/build-tooling": "*",
    "@jest/globals": "^26.6.2",
    "@storybook/addon-actions": "^6.1.11",
    "@storybook/addon-knobs": "^6.1.11",
    "@storybook/addon-links": "^6.1.11",
    "@storybook/addon-viewport": "^6.1.11",
    "@storybook/addons": "^6.1.11",
    "@storybook/preset-create-react-app": "^3.1.5",
    "@storybook/react": "^6.1.11",
    "@testing-library/dom": "^7.2.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/node": "^14.0.26",
    "@types/react": "^16.13.1",
    "@types/react-router-dom": "^5.1.4",
    "babel-loader": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "react-scripts": "^4.0.1",
    "typescript": "~3.8.3"
  }
}
